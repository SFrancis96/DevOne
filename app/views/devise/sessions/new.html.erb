<main class="min-h-screen grid place-items-center">
    <div class="wrapper w-full h-3/4">

        <h2 class="h2-style mx-auto"">Login</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: 'w-1/3 mx-auto mb-10'}) do |f| %>
        <div class="form-inputs w-full">
            <%= f.input :email,
                        :label => "Email",
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "flex flex-col w-full mb-6 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
            <%= f.input :password,
                        :label => "Mot de passe",
                        required: false,
                        input_html: { autocomplete: "current-password", class: "flex flex-col w-full mb-6 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
        </div>

        <div class="form-actions flex justify-between">
            <%= f.input :remember_me, :label => "Ce souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
            <%= f.button :submit, "Se connecter", :class => "btn-primary ml-auto" %>
        </div>
        <% end %>

        <div class="w-fit mx-auto text-center">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</main>