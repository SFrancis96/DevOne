<main class="min-h-screen grid place-items-center">
    <div class="wrapper w-full h-3/4">
        <h2 class="h2-style mx-auto">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {class: 'w-11/12 sm:w-1/3 mx-auto mb-10'}) do |f| %>
        <%= f.error_notification %>
            <div class="form-inputs w-full">
                <div>
                    <%= f.input :username,
                                :label => "Nom d'utilisateur",
                                required: true,
                                autofocus: true,
                                input_html: { autocomplete: "username", class: "flex flex-col w-full mb-4 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" }%>
                </div>

            <div class="form-inputs w-full">
                <div>
                    <%= f.input :email,
                                :label => "Email",
                                required: true,
                                input_html: { autocomplete: "email", class: "flex flex-col w-full mb-4 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" }%>
                </div>

                <div class="mb-4">
                    <%= f.input :password,
                                :label => "Mot de passe",
                                required: true,
                                hint: ("*#{@minimum_password_length} caractères au minimum" if @minimum_password_length),
                                input_html: { autocomplete: "new-password", class: "flex flex-col w-full appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
                </div>

                <div>
                    <%= f.input :password_confirmation,
                                :label => "Confirmez votre mot de passe",
                                required: true,
                                input_html: { autocomplete: "new-password", class: "flex flex-col w-full mb-6 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
                </div>
            </div>

            <div class="form-actions">
                <%= f.button :submit, "S'inscrire", :class => "btn-primary ml-auto mb-5" %>
            </div>
        <% end %>

        <div class="w-fit mx-auto text-center">
            <p class="mb-2">Vous avez déjà un compte ?</p>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</main>