<main class="min-h-screen grid place-items-center">
    <div class="wrapper w-full h-3/4">
        <h2 class="h2-style text-center mx-auto">Forgot your password?</h2>

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'w-11/12 sm:w-1/3 mx-auto mb-10' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "flex flex-col w-full mb-4 appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" } %>
        </div>

        <div class="form-actions">
            <%= f.button :submit, "Send me reset password instructions" %>
        </div>
        <% end %>

        <div class="w-fit mx-auto text-center">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</main>
